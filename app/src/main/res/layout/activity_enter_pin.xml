<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".PinCodeActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ellipse" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:rotation="-45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger_front" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/o_donut" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hot_dog" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="80dp"
        android:background="@drawable/text_permission_border"
        android:elevation="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/enter_pin_code"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/pink"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:text="@string/save"
            android:visibility="invisible"
            android:layout_marginHorizontal="30dp"/>

        <LinearLayout
            android:id="@+id/listPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/pin1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/pin_code_oval"/>

            <View
                android:id="@+id/pin2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/pin_code_oval"/>

            <View
                android:id="@+id/pin3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/pin_code_oval"/>

            <View
                android:id="@+id/pin4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pin_code_oval"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="20dp"
                android:text="1"
                android:tag="1"/>

            <TextView
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="20dp"
                android:text="2"
                android:tag="1"/>

            <TextView
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:text="3"
                android:tag="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="20dp"
                android:text="4"
                android:tag="4"/>

            <TextView
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="20dp"
                android:text="5"
                android:tag="5"/>

            <TextView
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:text="6"
                android:tag="6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="20dp"
                android:text="7"
                android:tag="7"/>

            <TextView
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="20dp"
                android:text="8"
                android:tag="8"/>

            <TextView
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:text="9"
                android:tag="9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pin_code_oval"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_regular"
                android:text="0"
                android:tag="0"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>